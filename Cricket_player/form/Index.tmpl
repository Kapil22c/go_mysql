{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> International Players </h2>
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Country</td>
        <td>Role</td>
        <td>Age</td>
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td>{{ .Id }}</td>
        <td> {{ .Name }} </td>
        <td>{{ .Country }} </td>
        <td>{{ .Role }} </td>
        <td>{{ .Age }} </td> 
        <td><a href="/show?id={{ .Id }}">View</a></td>
        <td><a href="/edit?id={{ .Id }}">Edit</a></td>
        <td><a href="/delete?id={{ .Id }}">Delete</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}